<Window x:Class="ZChat.PythonConsole"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Python Console" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBox Grid.Row="0" Name="consoleOutput" IsReadOnly="True" VerticalContentAlignment="Bottom"
                         HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap" FontFamily="Courier New" />
        <Grid Grid.Row="1" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Name="consolePromptLabel" Margin="2" FontFamily="Courier New">>>></TextBlock>
            <TextBox Grid.Column="1" Name="consoleInput" AcceptsTab="True" KeyUp="consoleInput_KeyUp" HorizontalAlignment="Stretch" FontFamily="Courier New" />
        </Grid>
    </Grid>
</Window>
